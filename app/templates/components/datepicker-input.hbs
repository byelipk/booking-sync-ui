{{#if dropdown}}
  {{#basic-dropdown calculatePosition=calculatePosition as |dropdown|}}
    {{#dropdown.trigger}}
      <input
      type="text"
      class="form-control"
      id="when"
      aria-describedby="When"
      placeholder="Anytime"
      value="{{if (and range.start range.end)
        (format-date-range range.start range.end) '' }}"
      autocomplete="off">
    {{/dropdown.trigger}}

    {{#dropdown.content}}
      {{calendar-input
        rental=rental
        range=range
        hide=(action dropdown.actions.close)
        calendarClass="calendar calendar-md"}}
    {{/dropdown.content}}
  {{/basic-dropdown}}
{{else}}
  {{calendar-input
    rental=rental
    range=range
    hide=(action 'hide')
    calendarClass="calendar calendar-lg"}}
{{/if}}
