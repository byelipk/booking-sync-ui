<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-7">
      {{#call-out as |header|}}
        {{header.title text="BookSync"}}
        {{header.subtitle text="Book a unique home and live like a local when you're on the go."}}
      {{/call-out}}
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      {{search-form}}
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h5>Rentals</h5>
    </div>
  </div>

  <div class="row">
    <div class="d-flex horizontal-scroll flex-row">
      {{#each model as |rental|}}
        {{rental-card rental=rental}}
      {{/each}}
    </div>
  </div>
</div>
